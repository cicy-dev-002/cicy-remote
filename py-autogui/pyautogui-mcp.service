[Unit]
Description=PyAutoGUI MCP Server
After=network.target

[Service]
Type=simple
User=%i
WorkingDirectory=/path/to/py-autogui
ExecStart=/usr/bin/python3 /path/to/py-autogui/server.py --transport streamable-http --host 0.0.0.0 --port 8050
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target